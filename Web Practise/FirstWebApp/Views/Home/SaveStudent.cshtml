@model FirstWebApp.Models.Student
@*//ViewBag.Message*@
@using (Html.BeginForm("SaveStudent", "Home", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        <div>
            @Html.TextBoxFor(x => x.Name, "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Email)
        <div>
            @Html.TextBoxFor(x => x.Email, "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Address)
        <div>
            @Html.TextBoxFor(x => x.Address, "", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.DepartmentId)
        <div>
            @Html.DropDownListFor(x => x.DepartmentId,new SelectList(ViewBag.Departments,"Id","Name"), "---Select----", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>

    <table class="table table-striped border">
        <thead>
            <tr>
                <td>Student Name</td>
                <td>Email</td>
                <td>Address</td>
                <td>Department Name</td>
            </tr>
        </thead>
        <tbody>
           @foreach (var item in (List<Student>)ViewBag.Students)
           {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>@item.DepartmentName</td>                                 
            </tr>
           }
        </tbody>
    </table>

}